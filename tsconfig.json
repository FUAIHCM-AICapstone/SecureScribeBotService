{
  "compilerOptions": {
      "lib": ["es2020", "dom", "dom.iterable"],
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2020",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": ["node_modules/*", "src/types/*"]
      },
      "strictNullChecks": true,
      "resolveJsonModule": true,
      "noEmitOnError": false,
      "skipLibCheck": true
  },
  "ts-node": {
    "files": true,
    "transpileOnly": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"]
}
